    <!-- Delete existing idea -->
    <target name="DeleteIdea" description="Deletes existing Idea">
        <webtest name="deleteIdea">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Idea link" url="/ideaform?ididea=-1"/>
                <clickbutton label="${button.delete}" description="Click button 'Delete'"/>
                <verifytitle description="display Idea List" text=".*${ideaList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${idea.deleted}"/>
            </steps>
        </webtest>
    </target>    <!--Idea-END-->
    <!--Ideabody-START-->
